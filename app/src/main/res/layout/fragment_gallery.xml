<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/centerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLinearLayout"
        tools:ignore="UnknownIdInLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_height="390dp"
            >


            <ProgressBar
                android:id="@+id/revolProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="390dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_circular_background"
                android:contentDescription="@string/all"
                android:max="120"
                android:progressDrawable="@drawable/ic_circular_progress"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="313dp"
                android:layout_height="275dp"
                android:contentDescription="@string/all"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.504"
                app:srcCompat="@drawable/ic_dasharray"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="73dp"
                android:layout_height="93dp"
                android:contentDescription="@string/all"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.501"
                app:srcCompat="@drawable/speed"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/revolTextView"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/humidity"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TableLayout
            android:id="@+id/simpleTableLayout"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:stretchColumns="*">

        <TableRow
            android:id="@+id/firstRow"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/temperatureTextView"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"

                android:alpha="1"
                android:background="@color/teal_700"
                android:gravity="center"
                android:padding="18dip"
                android:radius="10dp"
                android:text="20ÂºC "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView

                android:id="@+id/humidityTextView"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"

                android:background="@color/teal_700"

                android:padding="18dip"
                android:gravity="center"
                android:text="36%"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView

                android:id="@+id/velocityTextView"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/teal_700"
                android:padding="18dip"
                android:gravity="center"
                android:text="0 rpm"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </TableRow>
            <TableRow
                android:id="@+id/secondRow"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView1Row2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="TEMPERATURA"

                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/textView2Row2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="HUMEDAD"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/textView3Row2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="VELOCIDAD"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_toggle_theme"
            android:text=""
            android:textOff=""
            android:textOn=""
            tools:ignore="TouchTargetSizeCheck" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>





